<?xml version="1.0" encoding="utf-8"?>

<!-- android:background="@drawable/touch_selector" -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_selector"
    android:clickable="true"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:paddingEnd="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingStart="8dp">

    <TextView
        android:id="@+id/list_item_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20sp"
        tools:text="04.19(wed)" />

    <TextView
        android:id="@+id/list_item_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorExpense"
        android:textSize="20sp"
        tools:text="ï¿¦1,500" />

    <LinearLayout
        android:id="@+id/list_item_subtype_memo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/list_item_amount_tv"
        android:layout_toRightOf="@id/list_item_date_tv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_subtype_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_item_entry_gap"
            android:layout_marginStart="@dimen/list_item_entry_gap"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20sp"
            tools:text="Food" />

        <TextView
            android:id="@+id/list_item_memo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/list_item_entry_gap"
            android:layout_marginLeft="@dimen/list_item_entry_gap"
            android:layout_marginRight="@dimen/list_item_entry_gap"
            android:layout_marginStart="@dimen/list_item_entry_gap"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="1"
            android:textSize="20sp"
            tools:text="abcdefghijklmnop abcdefghijklmnop abcdefghijklmnop" />
    </LinearLayout>
</RelativeLayout>