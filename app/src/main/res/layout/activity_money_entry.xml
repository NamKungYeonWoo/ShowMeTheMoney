<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_money_entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zettafantasy.visualhousekeepingbook.MoneyEntryActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_money_entry"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <fragment
        android:id="@+id/frag_money_entry"
        android:name="com.zettafantasy.visualhousekeepingbook.MoneyEntryFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
